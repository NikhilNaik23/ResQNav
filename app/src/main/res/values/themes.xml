<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CA_2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#E64A19</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2196F3</item>
        <item name="colorSecondaryVariant">#1976D2</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
    </style>

    <style name="Theme.CA_2" parent="Base.Theme.CA_2" />

    <!-- Splash Screen Theme -->
    <style name="Theme.CA_2.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF5722</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenIconBackgroundColor">#FF5722</item>
        <item name="postSplashScreenTheme">@style/Theme.CA_2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>