<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ—ºï¸ Smart Route Optimizer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:gravity="center"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/destinationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Tap button to find nearest shelter"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:padding="6dp"
            android:background="@drawable/rounded_button_outline"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <!-- Analysis Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/safetyScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Safety Score: --/100"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap 'Analyze Route' to check safety"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/routeAnalysis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Route analysis will appear here..."
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>

    <!-- Button Section - Always visible -->
    <Button
        android:id="@+id/btnAnalyzeRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ” Analyze Current Route"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"/>

    <!-- Map View to display the route -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <org.osmdroid.views.MapView
            android:id="@+id/routeMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

