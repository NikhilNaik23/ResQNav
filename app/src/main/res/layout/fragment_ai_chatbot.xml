<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="#2196F3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– AI Emergency Assistant"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by Google Gemini"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Quick Action Buttons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFirstAid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ©¹ First Aid"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

            <Button
                android:id="@+id/btnEvacuation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš¶ Evacuation"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

            <Button
                android:id="@+id/btnEarthquake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ Earthquake"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

            <Button
                android:id="@+id/btnFlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒŠ Flood"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TonalButton"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Chat Output -->
    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/chatOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:lineSpacingExtra="4dp"/>

    </ScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <EditText
            android:id="@+id/chatInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask about emergency procedures..."
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:maxLines="3"/>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button"/>

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginStart="4dp"
            style="@style/Widget.Material3.Button.TextButton"/>

    </LinearLayout>

</LinearLayout>

