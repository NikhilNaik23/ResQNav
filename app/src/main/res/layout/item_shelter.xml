<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with icon and name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_compass"
                android:tint="#4CAF50"
                android:contentDescription="Shelter Icon" />

            <TextView
                android:id="@+id/shelter_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Shelter Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Address with icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_map"
                android:tint="#666666"
                android:layout_marginEnd="8dp"
                android:contentDescription="Location" />

            <TextView
                android:id="@+id/shelter_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shelter Address"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Capacity with progress indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:tint="#666666"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Capacity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity: "
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/shelter_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/capacity_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:progress="40"
                android:progressTint="#4CAF50"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

        <!-- Contact with icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_call"
                android:tint="#666666"
                android:layout_marginEnd="8dp"
                android:contentDescription="Contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shelter_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91-1234567890"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Facilities with chips style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="#666666"
                android:layout_marginEnd="8dp"
                android:contentDescription="Facilities" />

            <TextView
                android:id="@+id/shelter_facilities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Facilities: Medical, Food, Water"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Distance badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="#E3F2FD">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_directions"
                android:tint="#2196F3"
                android:layout_marginEnd="8dp"
                android:contentDescription="Distance" />

            <TextView
                android:id="@+id/shelter_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distance: Calculating..."
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />

        </LinearLayout>

        <!-- View Direction Button -->
        <Button
            android:id="@+id/btn_view_direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸ“ View Direction on Map"
            android:textColor="@color/white"
            android:backgroundTint="#4CAF50"
            android:drawableStart="@android:drawable/ic_menu_directions"
            android:drawableTint="@color/white"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Navigate Button -->
        <Button
            android:id="@+id/btn_navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ§­ Start Navigation"
            android:textColor="@color/white"
            android:backgroundTint="#2196F3"
            android:drawableStart="@android:drawable/ic_menu_directions"
            android:drawableTint="@color/white"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
